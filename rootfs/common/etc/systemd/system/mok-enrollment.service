[Unit]
Description=MOK Key Enrollment for Secure Boot
ConditionPathExists=/etc/pki/mok/LOCALMOK.der
ConditionPathExists=!/var/lib/mok-enrollment/completed

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=bash /usr/bin/enroll-mok-firstboot.sh
StandardInput=tty
StandardOutput=tty
StandardError=tty

[Install]
WantedBy=multi-user.target